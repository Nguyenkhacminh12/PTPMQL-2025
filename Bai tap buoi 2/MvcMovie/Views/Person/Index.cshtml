@model IEnumerable<MvcMovie.Models.Person>

@{
    ViewData["Title"] = "Danh sách Person";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-primary"> Danh sách Người Dùng</h3>
        <a asp-action="Create" class="btn btn-success">
             Thêm mới
        </a>
    </div>

    <div class="row g-3">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm border-0 h-100" style="border-radius: 12px;">
                        <div class="card-body">
                            <h5 class="card-title fw-bold text-dark"> @item.FullName</h5>
                            <p class="card-text mb-1"><strong> Person ID:</strong> @item.PersonId</p>
                            <p class="card-text"><strong> Địa chỉ:</strong> @item.Address</p>
                        </div>
                        <div class="card-footer bg-white border-0 d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@item.PersonId" class="btn btn-outline-info btn-sm w-100"> Xem</a>
                            <a asp-action="Edit" asp-route-id="@item.PersonId" class="btn btn-warning btn-sm w-100"> Sửa</a>
                            <a asp-action="Delete" asp-route-id="@item.PersonId" class="btn btn-danger btn-sm w-100"> Xoá</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-warning text-center">
                     Không có dữ liệu nào!
                </div>
            </div>
        }
    </div>
</div>
