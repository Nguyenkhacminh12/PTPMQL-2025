@model MvcMovie.Models.Person
@{
    ViewData["Title"] = "Edit Person";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg border-0 p-4" style="width: 100%; max-width: 500px; border-radius: 12px;">
        <div class="card-body">
            <h4 class="card-title text-center fw-bold mb-4 text-warning"> Sửa Thông Tin</h4>

            <form asp-action="Edit" method="post" class="d-flex flex-column gap-3">
                <input type="hidden" asp-for="PersonId" />

                <div>
                    <label asp-for="FullName" class="form-label fw-semibold"> Họ tên:</label>
                    <input asp-for="FullName" class="form-control" required />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="Address" class="form-label fw-semibold"> Địa chỉ:</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-warning btn-lg w-100 mt-3" style="border-radius: 8px;">
                     Cập nhật
                </button>
            </form>

            <div class="text-center mt-3">
                <a asp-action="Index" class="text-decoration-none"> Quay lại danh sách</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
