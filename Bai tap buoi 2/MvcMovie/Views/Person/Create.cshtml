@model MvcMovie.Models.Person
@{
    ViewData["Title"] = "Create Person";
}

<h1 class="text-center mb-3">Dữ liệu từ Controller gửi về là: @ViewBag.Messeger</h1>

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg border-0 p-4" style="width: 100%; max-width: 500px; border-radius: 12px;">
        <div class="card-body">
            <h4 class="card-title text-center fw-bold mb-4 text-primary"> Thêm Người Dùng</h4>

            <form asp-action="Create" method="post" class="d-flex flex-column gap-3">
                <div>
                    <label asp-for="PersonId" class="form-label fw-semibold"> Person ID:</label>
                    <input asp-for="PersonId" class="form-control" placeholder="Nhập mã Person" required />
                    <span asp-validation-for="PersonId" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="FullName" class="form-label fw-semibold"> Họ tên:</label>
                    <input asp-for="FullName" class="form-control" placeholder="Nhập họ tên" required />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="Address" class="form-label fw-semibold"> Địa chỉ:</label>
                    <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100 mt-3" style="border-radius: 8px;">
                     Lưu dữ liệu
                </button>
            </form>

            <div class="text-center mt-3">
                <a asp-action="Index" class="text-decoration-none"> Quay lại danh sách</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
